<%= form_for(post, url: url) do |f| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="row">
    <div class="col-md-8">

      <div class="card">
        <div class="card-block">
          <% if @post.new_record? %>
            <h4 class="card-title">New post</h4>
          <% else %>
            <h4 class="card-title">
              <b>Edit</b>
              <span class="thin-text"><%= @post.title %></span>
            </h4>
          <% end %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">
            <div class="field">
              <%= f.label :title %>
              <%= f.text_field :title, class: 'form-control' %>
            </div>
          </li>
          <li class="list-group-item">
            <div class="field">
              <%= f.label :image_url %>
              <%= f.text_field :image_url, class: 'form-control' %>
            </div>
          </li>
        </ul>
      </div>

    </div>

    <div class="col-md-8">

       <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
      <div class="field">
          <%= f.label :body %>
          <%= f.text_area :body, class: 'form-control' %>
      </div>
    </div>

    <div class="col-md-8">
      <div class="col-md-3">
        <div class="actions">
          <%= f.submit "Save blog post", class: 'btn btn-primary btn-block' %>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div class="col-md-3">
        <% if @post.persisted? %>
          <%= link_to 'Show', @post, class: 'btn btn-sm btn-secondary btn-lg' %> |
        <% end %>
        <%= link_to 'Back', users_posts_path, class: 'btn btn-sm btn-secondary btn-lg' %>
      </div>
    </div>
  </div>
<% end %>
